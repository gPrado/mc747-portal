  .address-form
    = form_tag purchase_address_path(@purchase), :method => :put do
      .field
        CEP*
      .value
        = text_field_tag :cep, @address.cep
        = button_tag "Buscar por CEP", :value => :cep_address, :disable_with => "Espere..."
      %br
      
      .field
        Rua*
      .value
        = text_field_tag :logradouro, @address.logradouro
      %br
      
      .field
