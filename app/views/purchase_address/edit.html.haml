      .value
        = text_field_tag :numero, @address.numero
      %br
      
      .field
        Complemento
      .value
        = text_field_tag :complemento, @address.complemento
      %br
      
      .field
        Bairro*
      .value
        = text_field_tag :bairro, @address.bairro
      %br
      
      .field
        Localidade*
      .value
        = text_field_tag :localidade, @address.localidade
      %br
      
      .field
        UF*
      .value
        = text_field_tag :uf, @address.uf
      %br
  
      =button_tag "Buscar pelos campos", :value => :search_address, :disable_with => "Espere..."
